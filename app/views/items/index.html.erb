<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Artist</th>
      <th>Title</th>
      <th>Price</th>
      <th>Reference</th>
      <th>Availability</th>
      <th>Genre</th>
      <th>Category</th>
      <th>Release date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.artist.name %></td>
        <td><%= item.title %></td>
        <td><%= item.price %></td>
        <td><%= item.reference %></td>
        <td><%= item.availability %></td>
        <td><%= item.genre %></td>
        <td><%= item.category %></td>
        <td><%= item.release_date %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

